# Tools and applets
#
ifeq ($(USE_JSR_177_EMULATOR), true)
all_tools :: jcrmic sim
else
all_tools :: jcrmic
endif

jcrmic: $(JAVACARD_CLASSES) $(BINDIR)
	@echo " ..." $@
	$(AT)$(JAVAC_CMD) -d $(JAVACARD_CLASSES) $(JCRMIC_SOURCES)
	$(AT)cp -f $(JSR_177_DIR)/src/share/tool/jcrmic/$(JCRMIC_PROPERTIES) $(JAVACARD_CLASSES)/$(JCRMIC_PROPERTIES)
	$(AT)cp -f $(JSR_177_DIR)/src/share/tool/jcrmic/$(JCRMIC_MANIFEST_FILE) $(JAVACARD_CLASSES)/$(JCRMIC_MANIFEST_FILE)
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAR_CMD) cfm $(JCRMIC_ARCHIVE) $(JCRMIC_MANIFEST_FILE) com/sun/satsa/jcrmic )
	$(AT)mv $(JAVACARD_CLASSES)/$(JCRMIC_ARCHIVE) $(BINDIR)/$(JCRMIC_ARCHIVE)

ifeq ($(USE_JSR_177_EMULATOR), true)
sim: $(JAVACARD_CLASSES)
	@echo " ..." $@
	@echo " ... compiling SIM Toolkit"
	$(AT)$(JAVAC) -g -d $(JAVACARD_CLASSES) -classpath $(JC_API) $(SIM_TOOLKIT_SOURCES)
	@echo " ... compiling applets"
	$(AT)$(JAVAC) -g -d $(JAVACARD_CLASSES) -classpath $(JAVACARD_CLASSES)$(PATHSEP)$(JC_API) $(JC_SAT_APPLET_SOURCES)
	$(AT)$(JAVAC) -g -d $(JAVACARD_CLASSES) -classpath $(JC_API) $(JC_PKI_APPLET_SOURCES)
	$(AT)$(JAVAC) -g -d $(JAVACARD_CLASSES) -classpath $(JC_API) $(JC_ACL_APPLET_SOURCES)
	$(AT)cp -f $(JSR_177_DIR)/src/share/tool/javacard/*.opt $(JAVACARD_CLASSES)/
	$(AT)cp -f $(JSR_177_DIR)/src/share/tool/javacard/*.scr $(JAVACARD_CLASSES)/
	$(AT)cp -r -f $(JC_DIR)/api_export_files $(JAVACARD_CLASSES)/
	@echo " ... preparing SIM Toolkit"
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_VERIFIER)$(PATHSEP)$(JC_CONVERTER) com.sun.javacard.converter.Converter -config simtoolkit.opt )
	$(AT)mkdir -p $(JAVACARD_CLASSES)/api_export_files/sim/toolkit/javacard/
	$(AT)cp $(JAVACARD_CLASSES)/sim/toolkit/javacard/toolkit.exp $(JAVACARD_CLASSES)/api_export_files/sim/toolkit/javacard/
	@echo " ... preparing applets"
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_VERIFIER)$(PATHSEP)$(JC_CONVERTER) com.sun.javacard.converter.Converter -config gsmapplet.opt )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_VERIFIER)$(PATHSEP)$(JC_CONVERTER) com.sun.javacard.converter.Converter -config satapplet.opt )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_VERIFIER)$(PATHSEP)$(JC_CONVERTER) com.sun.javacard.converter.Converter -config pkiapplet.opt )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_VERIFIER)$(PATHSEP)$(JC_CONVERTER) com.sun.javacard.converter.Converter -config aclapplet.opt )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_SCRIPTGEN) com.sun.javacard.scriptgen.Main -o toolkit.scr -nobanner sim/toolkit/javacard/toolkit.cap )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_SCRIPTGEN) com.sun.javacard.scriptgen.Main -o gsmapplet.scr -nobanner com/sun/satsa/gsmapplet/javacard/gsmapplet.cap )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_SCRIPTGEN) com.sun.javacard.scriptgen.Main -o satapplet.scr -nobanner com/sun/satsa/satapplet/javacard/satapplet.cap )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_SCRIPTGEN) com.sun.javacard.scriptgen.Main -o pkiapplet.scr -nobanner com/sun/satsa/pkiapplet/javacard/pkiapplet.cap )
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_SCRIPTGEN) com.sun.javacard.scriptgen.Main -o aclapplet.scr -nobanner com/sun/satsa/aclapplet/javacard/aclapplet.cap )
	$(AT)(cd $(JAVACARD_CLASSES) ; cat header.scr toolkit.scr gsmapplet.scr satapplet.scr pkiapplet.scr aclapplet.scr footer.scr > satsimulator.scr)
	@echo " ... loading applets (be patient)"
	$(AT)$(JC_DIR)/bin/cref -o $(JC_EEPROM_IMAGE) -nobanner -nomeminfo -s &
	-$(AT)sleep 1
	$(AT)(cd $(JAVACARD_CLASSES) ; $(JAVA_CMD) -classpath $(JC_APDUTOOL_CLASSPATH) com.sun.javacard.apdutool.Main -h 127.0.0.1 -nobanner satsimulator.scr)
	$(AT)(cd $(JAVACARD_CLASSES) ; mkdir -p jc_script ; mv -f satsimulator.scr jc_script/ ; rm -f *.opt ; rm -f *.scr ; rm -fr api_export_files)
	@echo " ..." $@ " done"
endif

